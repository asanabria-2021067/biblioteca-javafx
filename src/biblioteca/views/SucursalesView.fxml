<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="326.0" prefWidth="807.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="biblioteca.controllers.SucursalController">
    <children>
        <TableView fx:id="tablaSucursales" layoutX="27.0" layoutY="14.0" prefHeight="200.0" prefWidth="772.0">
            <columns>
                <TableColumn fx:id="columnaNombre" prefWidth="386.0" text="Nombre" />
                <TableColumn fx:id="columnaDireccion" prefWidth="386.0" text="Dirección" />
            </columns>
        </TableView>

        <TextField fx:id="textFieldNombre" layoutX="27.0" layoutY="226.0" prefHeight="33.0" prefWidth="360.0" promptText="Nombre de la Sucursal" />
        <TextField fx:id="textFieldDireccion" layoutX="440.0" layoutY="226.0" prefHeight="33.0" prefWidth="360.0" promptText="Dirección de la Sucursal" />

        <Button layoutX="27.0" layoutY="280.0" onAction="#handleAgregarSucursal" prefHeight="41.0" prefWidth="150.0" style="-fx-background-color: lightgreen; -fx-text-fill: white; -fx-font-weight: bold;" text="Agregar Sucursal" />
        <Button layoutX="200.0" layoutY="280.0" onAction="#eliminarSucursal" prefHeight="41.0" prefWidth="150.0" style="-fx-background-color: lightcoral; -fx-text-fill: white; -fx-font-weight: bold;" text="Eliminar Sucursal" />
    </children>
</AnchorPane>
